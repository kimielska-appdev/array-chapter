<h1>List of users</h1>

  <dd>
    <form action="/insert_user">
      <label for="browser_user">Username</label>
      <input id="browser_user" type="text" name="query_username" placeholder="Enter a username...">

      <button>Add user</button>
    </form>
  </dd>

<table border = "1">

<tr>
  <th>
    <label>ID</label>
  </th>

  <th>
    <label>Username</label>
  </th>

  <th>
    
  </th>

</tr>

<% @list_of_users.each do |a_user|%>
  <tr>
    <td>
      <%= a_user.id%>
    </td>

    <td>
      <%= a_user.username%>
    </td>

    <td>
       <a href="/users/<%=a_user.username%>">
        Show details
      </a>
    </td>
  </tr>
<%end%>

</table>
